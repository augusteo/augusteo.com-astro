---
import { getCollection, render } from "astro:content";
import PostLayout from "../../layouts/PostLayout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog", ({ data }) => !data.draft);
  return posts.map((post) => {
    // For folder-based content (slug/index.mdx), extract just the folder name
    const slug = post.id.includes('/') ? post.id.split('/')[0] : post.id;
    return {
      params: { slug },
      props: post,
    };
  });
}

const post = Astro.props;
const { Content } = await render(post);

// Extract first image from body if no heroImage (for OG fallback)
let firstContentImage: string | undefined;
if (!post.data.heroImage && post.body) {
  const imgMatch = post.body.match(/!\[.*?\]\((@assets\/[^)]+)\)/);
  if (imgMatch) {
    // Convert @assets alias to /src/assets path for proper resolution
    firstContentImage = imgMatch[1].replace('@assets/', '/src/assets/');
  }
}
---

<PostLayout
  title={post.data.title}
  description={post.data.description}
  pubDate={post.data.pubDate}
  heroImage={post.data.heroImage}
  heroAlt={post.data.heroAlt}
  category={post.data.category}
  tags={post.data.tags}
  firstContentImage={firstContentImage}
>
  <Content />
</PostLayout>
